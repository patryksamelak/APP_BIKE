<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:floatingActionButtonLocation="http://schemas.android.com/tools">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/stoper"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_play_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fabSize="normal"
        android:layout_gravity="end|bottom"
        app:layout_constraintBottom_toTopOf="@+id/add_fab"
        app:layout_constraintEnd_toEndOf="@+id/add_fab"
        app:layout_constraintStart_toStartOf="@+id/add_fab"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/add_play_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/add_play_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_play_fab"
        app:layout_constraintTop_toTopOf="@+id/add_play_fab" />


    <!--Floating action button for add person-->
    <!--Make sure that you are constraining this
        button to the add Alarm FAB button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_pause_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_constraintBottom_toTopOf="@+id/add_play_fab"
        app:layout_constraintEnd_toEndOf="@+id/add_play_fab"
        app:layout_constraintStart_toStartOf="@+id/add_play_fab"
        app:srcCompat="@drawable/pause" />

    <!--Action name text for the add person button-->
    <!--Make sure that you are constraining this Text
        to the add Person FAB button-->
    <TextView
        android:id="@+id/add_pause_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Pauza"
        app:layout_constraintBottom_toBottomOf="@+id/add_pause_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_pause_fab"
        app:layout_constraintTop_toTopOf="@+id/add_pause_fab" />

    <!--Floating action button for add person-->
    <!--Make sure that you are constraining this
        button to the add Alarm FAB button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_resetsave_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_marginBottom="230dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_constraintBottom_toTopOf="@+id/add_play_fab"
        app:layout_constraintEnd_toEndOf="@+id/add_play_fab"
        app:layout_constraintStart_toStartOf="@+id/add_play_fab"
        app:srcCompat="@drawable/reset" />

    <!--Action name text for the add person button-->
    <!--Make sure that you are constraining this Text
        to the add Person FAB button-->
    <TextView
        android:id="@+id/add_resetsave_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Zapisz i Reset"
        app:layout_constraintBottom_toBottomOf="@+id/add_pause_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_pause_fab"
        app:layout_constraintTop_toTopOf="@+id/add_pause_fab" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_statistics_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_constraintBottom_toTopOf="@+id/add_play_fab"
        app:layout_constraintEnd_toEndOf="@+id/add_play_fab"
        app:layout_constraintStart_toStartOf="@+id/add_play_fab"
        app:srcCompat="@drawable/statistics" />

    <!--Action name text for the add person button-->
    <!--Make sure that you are constraining this Text
        to the add Person FAB button-->
    <TextView
        android:id="@+id/add_statistics_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="320dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Statystyki"
        app:layout_constraintBottom_toBottomOf="@+id/add_pause_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_pause_fab"
        app:layout_constraintTop_toTopOf="@+id/add_pause_fab" />




    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"
        />



    <fragment
        android:id="@+id/detail_frag"
        android:name="com.example.bike.BikeDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_below="@+id/toolbar"
        />
</RelativeLayout>